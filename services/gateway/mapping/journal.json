{
  "services": {
    "journal_service": {
      "base_url": "http://kube-tools.kube-tools.svc.cluster.local",
      "port": 80,
      "routing": [
        {
          "gateway_endpoint": "/api/tools/journal",
          "service_endpoint": "/api/journal",
          "allowed_methods": ["GET", "PUT", "POST"]
        },
        {
          "gateway_endpoint": "/api/tools/journal/<entry_id>",
          "service_endpoint": "/api/journal/<entry_id>",
          "allowed_methods": ["GET", "DELETE"]
        },
        {
          "gateway_endpoint": "/api/tools/journal/unit",
          "service_endpoint": "/api/journal/unit",
          "allowed_methods": ["GET", "PUT", "POST"]
        },
        {
          "gateway_endpoint": "/api/tools/journal/unit/<unit_id>",
          "service_endpoint": "/api/journal/unit/<unit_id>",
          "allowed_methods": ["DELETE"]
        },
        {
          "gateway_endpoint": "/api/tools/journal/category",
          "service_endpoint": "/api/journal/category",
          "allowed_methods": ["GET", "PUT", "POST"]
        },
        {
          "gateway_endpoint": "/api/tools/category/<category_id>",
          "service_endpoint": "/api/category/<category_id>",
          "allowed_methods": ["DELETE"]
        }
      ]
    }
  }
}
